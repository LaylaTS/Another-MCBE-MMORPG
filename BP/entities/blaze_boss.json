				"event": "minecraft:on_hurt_event",
				"target": "self"
			},
			"minecraft:conditional_bandwidth_optimization": {}
		},
		"events": {
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"mode_switcher"
					]
				}
			},
			"switch_to_melee": {
				"remove": {
					"component_groups": [
						"ranged_mode",
						"ranged_mode_1"
					]
				},
				"add": {
					"component_groups": [
						"melee_mode"
					]
				},
				"run_command": {
					"command": "/summon lightning_bolt"
				}
			},
			"switch_to_ranged": {
				"remove": {
					"component_groups": [
						"melee_mode"
					]
				},
				"add": {
					"component_groups": [
						"ranged_mode"
					]
				}
			},
			"minecraft:on_hurt_event": {
				"add": {
					"component_groups": [
						"mode_switcher"
					]
				}
			}
		}
	}
}