{
  "format_version": "1.20.10",
  "minecraft:item": {
    "description": {
      "identifier": "mmorpg:sculksword",
      "category": "equipment"
    },
    "components": {
      "minecraft:can_destroy_in_creative": false,
      "minecraft:creative_category": {
        "parent": "itemGroup.name.sword"
      },
      "minecraft:damage": 9,
      "minecraft:foil": true,
      "minecraft:enchantable": {
        "value": 14,
        "slot": "sword"
      },
      "minecraft:hand_equipped": true,
      "minecraft:icon": {
        "texture": "mmorpg_sculksword"
      },
      "minecraft:cooldown": {
        "category": "sculksword",
        "duration": 5
      },
      "minecraft:on_use": {
        "on_use": {
          "event": "mmorpg:useability"
        }
      },
      "minecraft:max_stack_size": 1,
      "minecraft:repairable": {
        "repair_items": [
          {
            "items": [
              "minecraft:iron_ingot"
            ],
            "repair_amount": "query.max_durability * 0.25"
          },
          {
            "items": [
              "mmorpg:sculksword"
            ],
            "repair_amount": "context.other->query.remaining_durability + 0.12 * context.other->query.max_durability"
          }
        ]
      },
      "minecraft:weapon": {
        "on_hurt_entity": {
          "event": "damaged",
          "target": "self"
        }
      },
      "tag:minecraft:is_sword": {},
      "tag:minecraft:is_tool": {}
    },
    "events": {
      "damaged": {
        "run_command": {
          "command": "/scoreboard players add @s[scores={mana=..95}] mana 5",
          "target": "self"
        }
      },
      "mmorpg:useability": {
        "sequence": [
          {
            "run_command": {
              "command": "/execute as @s[scores={mana=30..}] run summon mmorpg:abilitysculkblast ~ ~2 ~",
              "target": "self"
            }
          },
          {
            "run_command": {
              "command": "/scoreboard players remove @s[scores={mana=30..}] mana 30",
              "target": "self"
            }
          }
        ]
      }
    }
  }
}